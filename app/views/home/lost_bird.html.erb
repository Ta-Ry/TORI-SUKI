<div class="container">
  <div class="row">
    <div class="col-xs-9">
	  <h2>いいねしてる投稿</h2>
	    <table class="table">
          <thead>
            <tr>
            <th></th>
            <th>投稿内容</th>
            <th>画像</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @tag.each do |tag| %>
          <% post = Post.find_by(id: tag.post_id) %>
            <tr>
              <td>
                <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
              </td>
              <td class="comment">
                 <%= link_to post_path(post.id) do %>
                 <%= post.main_comment %>
                 <% end %>
              </td>
              <td><%= attachment_image_tag post, :post_image, :fill, 100, 100, class: "pull-left profile-thumb" %></td>
              <td id="favorite-<%= post.id %>">
              <%= render partial: "favorite", locals: { post: post } %>
             </td>
             <td>
              <%= render 'posts/tag_list', tag_list: post.tag_list %>
             </td>
             <td>
               <div>
                 コメント数: <%= post.post_comments.count %>
               </div>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
  .comment
  {
    height: 100%;
    width: 250px;
  }
</style>