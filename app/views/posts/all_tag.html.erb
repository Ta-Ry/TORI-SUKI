<div class="container">
  <div class="row">
    <h1>タグ一覧</h1>
    <div class="col-xs-offset-3 col-xs-6">
      <h3>タグ検索</h3>
      <%= form_with url: all_tag_path, method: :get, local: true do |form| %>
        <%= form.text_field :search %>
        <%= form.submit 'Search', name: nil %>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>タグ名</th>
            <th>投稿数</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
          <tr>
            <td>
              <%= link_to posts_path(tag_name: tag.name) do %>
                <%= tag %>
              <% end %>
            </td>
            <td>
              <%= tag.taggings_count %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
