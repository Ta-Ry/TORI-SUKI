<div class="container">
  <div class="row">
  	<h2>検索結果</h2>
  	<table class="table">
  		<thead>
  			<tr>
  				<th></th>
  				<th>投稿者名</th>
  				<th>投稿</th>
  				<th>投稿画像 </th>
  			</tr>
  		</thead>
  		<tbody>
  			<% @posts.each do |post| %>
        <tr>
          <td><%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
          </td>
          <td>
          	<%= post.user.name %>
          </td>
          <td class="comment">
          	<%= link_to post_path(post.id) do %>
          	<%= post.main_comment %>
          	<% end %>
          </td>
          <td><%= attachment_image_tag post, :post_image, :fill, 100, 100, class: "pull-left profile-thumb" %>
          </td>
          <td>
            <a><%= link_to '詳細', post_path(post) %></a>
          </td>
          <td id="favorite-<%= post.id %>">
            <%= render partial: "posts/favorite", locals: { post: post } %>
          </td>
          <td  class="tag">
            <%= render 'posts/tag_list', tag_list: post.tag_list %>
          </td>
        </tr>
        <% end %>

  		</tbody>
  	</table>
  </div>
</div>